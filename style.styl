*
  box-sizing: border-box

html
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  height: 100%
  margin: 0
  overflow: hidden

.properties
  padding-left: 1em

body > .properties
  padding-left: 0
  width: 100%
  height: 100%
  position: absolute
  top: 0
  right: 0
  overflow: auto

.row
  //WTF?
  margin: -2px 0 -1px 0 

.dealies
  .row
    &::after
      content: ","
  
    &:last-child
      &::after
        content: ""

    &:first-child
      &::before
        content: "{"
    &:last-child
      &::after
        content: "}"

input
  border: 1px solid rgba(0, 0, 0, 0.125)
  border-left: none
  
  &:first-child
    border-left: 1px solid rgba(0, 0, 0, 0.125)

  margin: 0
  
  padding: 0 0.5em

  width: 100px

  &.key
    text-align: right

iframe
  border: none
  width: 50%
  height: 100%
